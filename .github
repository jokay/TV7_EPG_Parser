name: Daily EPG Parser

on:
  schedule:
    - cron: "0 0 * * *"  # daily at midnight UTC
  workflow_dispatch:

jobs:
  run-epg:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout this repo
      uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: "3.10"

    - name: Install dependencies
      run: python -m pip install --upgrade pip && pip install -r requirements.txt

    - name: Run EPG Parser
      run: python main.py

    - name: Commit results to TV7_EPG_Data
      env:
        PAT_TOKEN: ${{ secrets.TARGET_REPO_PAT }}
      run: |
        # Clone target repo using PAT
        git clone https://x-access-token:${PAT_TOKEN}@github.com/jokay/TV7_EPG_Data.git target

        # Copy parser output into target
        rsync -av --delete output/ target/

        cd target
        git config user.name "github-actions[bot]"
        git config user.email "github-actions[bot]@users.noreply.github.com"

        # Commit only if changes exist
        git add .
        if git diff --cached --quiet; then
          echo "No changes to commit"
        else
          git commit -m "Daily EPG update $(date -u +"%Y-%m-%d %H:%M UTC")"
          git push origin master
        fi
